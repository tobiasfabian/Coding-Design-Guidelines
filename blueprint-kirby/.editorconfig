[*.{css,js,mjs,json,html,md,yml,php}]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.yml]
indent_style = space

[*.md]
trim_trailing_whitespace = false

[public/content/**/*.txt]
trim_trailing_whitespace = false
insert_final_newline = false

[public/site/languages/*.php]
indent_style = space
indent_size = 4
